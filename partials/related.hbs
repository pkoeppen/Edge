{{#get "posts" limit="all" filter="tags:[{{post.tags}}]+id:-{{post.id}}" as |related|}}
    {{#if related}}
        <section class="related-posts">
            <div class="container">
                <h3 class="related-title">Related posts...</h3>
                <div class="post-feed">
                    {{#foreach posts visibility="all"}}
                        <div class="grid-item grid-sizer"></div>
                        {{> "loop"}}
                    {{/foreach}}
                </div>
            </div>
        </section>
    {{/if}}
{{/get}}